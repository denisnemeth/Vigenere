<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="340.0" prefWidth="500.0">
         <children>
             <Button fx:id="btn_browse" layoutX="65.0" layoutY="50.0" mnemonicParsing="false" onAction="#browseFiles" text="Browse files" />
             <TextField fx:id="txtfld_key" layoutX="300.0" layoutY="50.0" prefHeight="30.0" prefWidth="145.0" />
             <Button fx:id="btn_encrypt" layoutX="65.0" layoutY="140.0" mnemonicParsing="false" onAction="#encrypt" text="Encrypt" />
             <Button fx:id="btn_decrypt" layoutX="165.0" layoutY="140.0" mnemonicParsing="false" onAction="#decrypt" text="Decrypt" />
             <Label fx:id="lbl_selectedFile" alignment="CENTER" contentDisplay="CENTER" layoutX="40.0" layoutY="80.0" prefHeight="30.0" prefWidth="130.0" textAlignment="CENTER" />
             <TextArea fx:id="txtarea" layoutX="65.0" layoutY="225.0" prefHeight="70.0" prefWidth="375.0" />
             <Button fx:id="btn_content" layoutX="315.0" layoutY="140.0" mnemonicParsing="false" onAction="#showContent" prefHeight="30.0" prefWidth="120.0" text="Show content" />
         </children></Pane>
   </children>
